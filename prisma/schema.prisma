generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Score {
  id String @id @default(cuid())

  score Int

  playerName String
  Player     Player @relation(fields: [playerName], references: [name])

  tournamentId String
  Tournament   Tournament @relation(fields: [tournamentId], references: [id])

  @@unique([playerName, tournamentId])
}

model Player {
  id String @id @default(cuid())

  name String @unique

  teamId String
  Team   Team   @relation(fields: [teamId], references: [id])

  scores Score[]
}

enum TournamentType {
  Individual
  Team
}

model Tournament {
  id String @id @default(cuid())

  type TournamentType @default(Team)

  teamId String
  Team   Team   @relation(fields: [teamId], references: [id])

  week DateTime

  scoreTotal Int

  scores Score[]

  @@unique([teamId, week, type])
}

model Team {
  id String @id @default(cuid())

  name String @unique

  players Player[]

  Tournament Tournament[]
}
